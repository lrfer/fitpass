// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  password_hash String
  phone         String
  birthday      DateTime
  created_at    DateTime  @default(now())
  Personal      Personal?
  Trainee       Trainee?

  @@map("users")
}

model Personal {
  cref String @unique

  user   User   @relation(fields: [userId], references: [id])
  userId String @id @unique

  @@map("personals")
}

model Trainee {
  user   User   @relation(fields: [userId], references: [id])
  userId String @id @unique

  Training Training[]

  @@map("trainees")
}

model Training {
  id String @id @default(uuid())

  trainee Trainee @relation(fields: [traineeUserId], references: [userId])

  Exercise      Exercise[]
  traineeUserId String

  @@map("trainings")
}

model Exercise {
  id            String  @id @default(uuid())
  name          String
  target_muscle String
  machine       String
  comment       String?

  training_plan Training? @relation(fields: [trainingId], references: [id])

  trainingId String

  @@map("exercises")
}
